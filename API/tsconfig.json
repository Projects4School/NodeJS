{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/node_modules/",
  ]
}
